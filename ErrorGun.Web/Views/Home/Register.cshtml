@using ErrorGun.Web.App_Start

<div class="fourteen columns offset-by-one">
    <h3 class="add-bottom">Register App</h3>
    <div data-bind="visible: ErrorMessage, text: ErrorMessage" class="warning alert" style="display: none"></div>
    <div data-bind="visible: ApiKey" class="info alert" style="display: none">
        <h5>App Created</h5>
        <label class="inline">Id:</label> <span data-bind="text: Id"></span><br/>
        <label class="inline">ApiKey:</label> <span data-bind="text: ApiKey"></span>
    </div>
    <form data-bind="submit: Create">
        <label for="name">App Name</label>
        <input type="text" id="name" data-bind="value: Name" />
        
        <label for="emailAddress">Contact Email</label>
        <input type="text" 
               id="emailAddress"
               data-bind="value: NewContactEmail, valueUpdate: 'afterkeydown', event: { keypress: AddContactEmailOnEnter }"
               class="inline"/>
        <button data-bind="click: AddContactEmail, enable: NewContactEmailValid" class="small"><i class="icon-plus"></i> Add</button>
        
        <div class="boxed">
            <ul data-bind="foreach: ContactEmails">
                <li>
                    <button data-bind="click: $root.RemoveContactEmail" class="small"><i class="icon-remove"></i></button>
                    <span data-bind="text: $data"></span>
                </li>
            </ul>
        </div>
        <input type="submit" id="registerButton" name="Register" value="Register" />
    </form>
</div>

@section EndBodyScripts {
    @Scripts.Render(AppScript.HomeRegister)
    <script>
        var viewModel = new ErrorGun.AppCreate.ViewModel();
        ko.applyBindings(viewModel);

        $(function () {
            $('#name').focus();
        });
    </script>
}
